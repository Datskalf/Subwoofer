    <link name="back_outer_shoulder">
        <visual>
            <origin rpy="0 3.1415 0" xyz="0.117 0 0.47" />
            <geometry>
                <mesh filename="package://subwoofer_model/meshes/V1.02_Front_Outer_Shoulder.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </visual>
    </link>
    <joint name="back_outer_shoulder_to_base" type="fixed">
        <parent link="base_link"/>
