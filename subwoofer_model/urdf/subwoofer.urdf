            <origin rpy="0 1.57075 1.57075" xyz="0.249 0.252 0.38"/>
            <geometry>
                <mesh filename="package://subwoofer_model/meshes/V1.02_Cover_Rear_Plain.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </visual>
    </link>
    <joint name="cover_rear_to_base" type="fixed">
        <parent link="base_link"/>
        <child link="cover_rear"/>
        <origin xyz="0 -0.145 0.0115"/>
    </joint>
</robot>